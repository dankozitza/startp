#!/usr/bin/perl

my $url = $ARGV[0];

my $search = "https://duckduckgo.com";

if (!$url) {
   $url = $search;
}

if (@ARGV[1] || ($url !~ /\./ && $url ne "localhost")) {
   $url = $search . "/?q=";
   foreach my $arg (@ARGV) {
      $arg =~ s/\s/+/g;
      $url .= $arg . "+";
   }
   $url =~ s/\+$//;
}

print "$0: going to [$url]\n";

if (!-d $ENV{"HOME"} . "/downloads") {
	system("mkdir ~/downloads")
}

exec("cd ~/downloads; surf $url 2> ~/.s_surf_err &");

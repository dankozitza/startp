" ~/.vimrc (configuration file for vim only)
set tabstop=3
set shiftwidth=3
"set expandtab
set nu
set smarttab
set nobackup
set nowritebackup

let perl_include_pod = 1
let perl_extended_vars = 1
let perl_sync_dist = 250

"set rtp+=/usr/local/go/misc/vim/syntax
filetype plugin indent on

syntax on
colorscheme desert

set so=7

